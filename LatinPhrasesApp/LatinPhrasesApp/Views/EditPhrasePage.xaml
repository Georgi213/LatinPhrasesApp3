        <Label Text="Ladina" />
        <Entry x:Name="Latin" Placeholder="Sisesta ladina fraas" />

        <Label Text="Eesti" />
        <Entry x:Name="Estonian" Placeholder="Sisesta eesti keelne tõlge" />

        <Button Text="Salvesta" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>